{
  "compilerOptions": {
    "rootDir": "lib",
    "baseUrl": "./lib",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES5",

    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "outDir": "disc/esm",
    "declarationDir": "disc/types",

    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "paths": {
      "ts-ypmn-client/*": ["lib/*"]
    }
  },
  "include": ["lib"],
  "exclude": ["node_modules", "disc"]
}
